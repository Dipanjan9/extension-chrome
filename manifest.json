{
  "name":           "Zen Audio Player",
  "version":        "0.1.1",
  "description":    "Listen to YouTube videos on Zen Audio Player by adding '&zen' or '/zen' to the URL.",
  "background": {
    "persistent": true,
    "scripts": [ "background.js", "search-extension.js"]
  },
  "icons": {
    "128": "zen-audio-player-128.png"
  },
  "permissions":    [
    "webRequest",
    "webRequestBlocking",
    "*://*.youtube.com/*",
    "tabs"
  ],
  "omnibox": { "keyword" : "zen" },
  "manifest_version": 2,
  "commands": {
    "zap-play-pause": {
      "suggested_key": {
        "default": "MediaPlayPause",
        "mac": "MediaPlayPause"
      },
      "description": "Zen Audio Player play/pause",
      "global": true
    }
  }
}
